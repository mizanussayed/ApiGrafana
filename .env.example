# API Monitoring Stack Environment Variables
# Copy this file to .env and customize the values

# Grafana Configuration
GRAFANA_ADMIN_PASSWORD=your-secure-grafana-password
GRAFANA_ADMIN_USER=admin
GRAFANA_PORT=3000

# InfluxDB Configuration
INFLUXDB_ADMIN_PASSWORD=your-secure-influxdb-password
INFLUXDB_ADMIN_USER=admin
INFLUXDB_TOKEN=your-unique-influxdb-token
INFLUXDB_ORG=my-org
INFLUXDB_BUCKET=api-metrics
INFLUXDB_RETENTION_PERIOD=2d
INFLUXDB_PORT=8086

# API Configuration
API_ENVIRONMENT=Production
API_PORT=5001
API_INTERNAL_PORT=8080

# Nginx Configuration
NGINX_PORT=8080

# Docker Compose Configuration
COMPOSE_PROJECT_NAME=api-monitoring
